<%= simple_form_for @show do |f| %>
  <%= f.input :title, label: "Show Title", required: true %>
  <%= f.file_field :shows_img, label: "Show Poster" %>
  <%= f.input :show_date, as: :date, label: "Show Date", html5: true, required: true %>
  <%= f.input :description, label: "Show Description" %>
  <%= f.input :location, label: "Location", required: true %>
  <%= f.input :ticket_cost, label: "Ticket Cost" %>
  <%= f.button :submit %>
<% end %>
